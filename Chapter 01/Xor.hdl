/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
	//NOT both inputs
    	Nand(a=a,b=a,out=a0);
	Nand(a=b,b=b,out=b0);

	//NAND !A with B and A with !B
	Nand(a=a0,b=b,out=a1);
	Nand(a=a,b=b0,out=b1);

	//NAND the outputs
	Nand(a=a1,b=b1,out=out);
}
